{
    "name": "ts-edasm",
    "version": "0.1.0",
    "private": true,
    "description": "TypeScript port of EdAsm 6502 assembler and linker",
    "license": "UNLICENSED",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "edasm": "dist/cli.js"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:golden": "vitest run golden",
        "test:integration": "vitest run integration",
        "test:smoke": "vitest run assembler.test",
        "test:coverage": "vitest run --coverage",
        "edasm": "node dist/cli.js"
    },
    "devDependencies": {
        "@types/node": "^20.11.30",
        "typescript": "^5.6.3",
        "vitest": "^2.1.5"
    },
    "engines": {
        "node": ">=20"
    }
}